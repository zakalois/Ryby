using Microsoft.AspNetCore.Mvc.RazorPages;

namespace Ryby.Areas.Identity.Pages.Account
{
    public class RegisterConfirmationModel : PageModel
    {
        public string EmailConfirmationUrl { get; set; }
        public bool DisplayConfirmAccountLink { get; set; }

        public void OnGet(string email, string returnUrl = null)
        {
            // Pokud nemáš email sender, necháme potvrzovací link zobrazit
            DisplayConfirmAccountLink = true;

            // Tady by normálně byl generovaný link z UserManageru
            EmailConfirmationUrl = Url.Page(
                "/Account/ConfirmEmail",
                pageHandler: null,
                values: new { userId = "demo", code = "demo", returnUrl },
                protocol: Request.Scheme);
        }
    }
}