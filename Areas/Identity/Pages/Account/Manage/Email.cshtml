@page
@model Ryby.Areas.Identity.Pages.Account.Manage.EmailModel
@{
    ViewData["Title"] = "Email";
}

<h3>Manage your email</h3>
<hr />

<div class="row">
    <div class="col-md-6">

        <form id="email-form" method="post" asp-page-handler="ChangeEmail">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label>Email</label>
                <input class="form-control" value="@Model.Email" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Input.NewEmail"></label>
                <input asp-for="Input.NewEmail" class="form-control" />
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Change email</button>

            @if (Model.IsEmailConfirmed)
            {
                <span class="text-success ml-2">Email is confirmed</span>
            }
            else
            {
                <span class="text-warning ml-2">Email is not confirmed</span>
            }
        </form>

        <hr />

        <form id="send-verification-email-form" method="post" asp-page-handler="SendVerificationEmail">
            <button type="submit" class="btn btn-secondary">Send verification email</button>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}