@page
@model Ryby.Pages.Profil.IndexModel
@using Ryby.Models
@{
    ViewData["Title"] = "Můj profil";
}

<div class="container mt-4">
    <div class="row">

        <!-- Levý sloupec: fotka + základní info -->
        <div class="col-md-3 mb-4">
            <div class="text-center">
                <img src="@(Model.CurrentUser != null && Model.CurrentUser.ProfilePicturePath != null
                         ? "/images/profile/" + Model.CurrentUser.ProfilePicturePath
                         : "/images/profile/default.jpg")"
                     alt="Profilová fotka"
                     class="img-fluid rounded-circle mb-3"
                     style="width:250px;height:250px;object-fit:cover;" />

                @if (Model.CurrentUser != null)
                {
                    <h5>@Model.CurrentUser.FirstName @Model.CurrentUser.LastName</h5>
                    <p class="text-muted mb-1">@Model.CurrentUser.Email</p>
                }
                else
                {
                    <h5>Neznámý uživatel</h5>
                    <p class="text-muted mb-1">Email není dostupný</p>
                }
            </div>
        </div>

        <!-- Střední sloupec: aktualita -->
        <div class="col-md-6 mb-4">
            <h4>Aktuální informace</h4>

            @if (!string.IsNullOrEmpty(Model.AktualitaText))
            {
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">@Model.AktualitaText</p>
                    </div>
                </div>
            }
            else
            {
                <p class="text-muted">Momentálně zde nejsou žádné nové aktuality.</p>
            }
        </div>

        <!-- Pravý sloupec: nabídka -->
        <div class="col-md-3 mb-4">
            <h5>Nabídka</h5>
            <ul class="list-group">
                <li class="list-group-item">
                    <a asp-page="/Dochazka/Index">Moje docházka</a>
                </li>
                <li class="list-group-item">
                    <a asp-page="/Ulovky/Index">Moje úlovky</a>
                </li>
                <li class="list-group-item">
                    <a asp-area="Identity" asp-page="/Account/Manage/Index">Upravit profil</a>
                </li>
            </ul>
        </div>

    </div>
</div>