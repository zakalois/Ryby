@page
@model Ryby.Pages.Profil.IndexModel
@{
    ViewData["Title"] = "Profil";
}

<h1>Můj profil</h1>

<div asp-validation-summary="All" class="text-danger mb-3"></div>

<p>Zde budou informace o přihlášeném uživateli.</p>

@if (Model.ProfileImagePath != null)
{
    <img src="~/images/profile/@Model.ProfileImagePath"
         class="img-thumbnail mt-3"
         style="max-width: 200px;" />
}
else
{
    <img src="~/images/profile/default.jpg"
         class="img-thumbnail mt-3"
         style="max-width: 200px;" />
}

<form method="post" enctype="multipart/form-data" class="mt-3">
    <div class="mb-3">
        <label class="form-label">Změnit profilovou fotku</label>
        <input type="file" name="ProfileImage" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Nahrát novou fotku</button>
</form>