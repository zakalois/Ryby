<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "Ryby") - Ryby</title>

    <!-- Bootstrap + tvoje CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ryby.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <!-- Logo -->
                <a class="navbar-brand" asp-area="" asp-page="/Index">Ryby</a>

                <!-- Mobilní menu -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- Levé menu -->
                    <ul class="navbar-nav flex-grow-1">

                        @*
<li class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-page="/Index">Domů</a>
</li>
*@


                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Aktuality/Index">Aktuality</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Dochazka/Index">Docházka</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Ulovky/Index">Úlovky</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Profil/Index">Profil</a>
                        </li>

                    </ul>

                    <!-- 🔥 LOGIN PARTIAL – TADY JE ODKAZ PŘIHLÁSIT -->
                    <!-- Ten odkaz upravíme v _LoginPartial.cshtml -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Hlavní obsah -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Paticka -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Ryby - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Skripty -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- ⭐⭐⭐ JavaScript pro zobrazení login panelu ⭐⭐⭐ -->
    <script>
        // Funkce, která zobrazí login panel na titulní stránce
        function showLoginPanel() {

            // Najdeme panel podle ID
            const panel = document.getElementById("login-panel");

            if (panel) {
                // Zobrazíme panel
                panel.style.display = "flex";

                // Posuneme stránku nahoru, aby byl panel vidět
                window.scrollTo({ top: 0, behavior: "smooth" });
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>